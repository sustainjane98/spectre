{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}
<main class="gh-main">
    <article class="gh-article">
        <header class="gh-article-header gh-canvas w-full flex justify-center grid-template-columns !grid-cols-none">
            <div class="w-full max-w-[1080px]">
                <h1 class="text-center gh-article-title is-title !w-full">{{t "Our regular events and activities"}}</h1>
                <p class="text-center !mt-4 !w-full">{{t "From open meetings to workshops and campaigns: our regular activities create spaces where young voices matter"}}</p>
            </div>
        </header>

        <section class="gh-content gh-canvas is-body">
            <div id="appointments-container" class="kg-width-full flex justify-center">
                <div class="w-full max-w-[1080px] min-h-[800px]">
                    <iframe
                        width="100%"
                        height="800"
                        src="https://cloud.linksjugend-solid.de/apps/calendar/embed/KC49KZTn4RzKPbfq/listMonth/now"
                        frameborder="0"
                        style="border: none;">
                    </iframe>
                </div>
            </div>
        </section>
    </article>
</main>